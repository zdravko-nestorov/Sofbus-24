<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/schedule_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:background="#808080"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/schedule_bus_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/schedule_tab_border"
            android:gravity="center"
            android:padding="9sp"
            android:text="@string/sch_search_tab_bus"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/schedule_tab_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/schedule_trolley_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-1sp"
            android:layout_marginRight="-1sp"
            android:layout_weight="1"
            android:background="@drawable/schedule_tab_border"
            android:gravity="center"
            android:padding="9sp"
            android:text="@string/sch_search_tab_trolley"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/schedule_tab_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/schedule_tram_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/schedule_tab_border"
            android:gravity="center"
            android:padding="9sp"
            android:text="@string/sch_search_tab_tram"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/schedule_tab_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/schedule_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sch_search_hint" >
    </EditText>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1sp"
        android:fastScrollEnabled="true"
        android:focusable="true" >
    </ListView>

</LinearLayout>