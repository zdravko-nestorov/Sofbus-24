<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <bg.znestorov.sofbus24.activity.SearchEditText
        android:id="@+id/vb_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="5sp"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:hint="@string/vb_search_hint"
        android:imeOptions="actionSearch" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1sp"
        android:fastScrollEnabled="true"
        android:focusable="true" >
    </ListView>

    <RelativeLayout
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:paddingBottom="30sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:paddingTop="50sp" >

        <ImageView
            android:id="@+id/vb_list_empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vb_list_empty_text"
            android:layout_alignRight="@+id/vb_list_empty_text"
            android:contentDescription="@string/app_img_empty_content_description"
            android:paddingBottom="20sp"
            android:src="@drawable/ic_empty_virtual_boards_list" />

        <TextView
            android:id="@+id/vb_list_empty_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/vb_list_empty_image"
            android:gravity="center_horizontal"
            android:textColor="#080808"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>