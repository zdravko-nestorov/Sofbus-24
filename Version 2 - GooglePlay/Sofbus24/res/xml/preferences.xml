<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_category_common" >
        <ListPreference
            android:defaultValue="bg"
            android:entries="@array/languagenChoice"
            android:entryValues="@array/languagenChoiceValues"
            android:key="appLanguage"
            android:summary="@string/pref_category_common_language_summary"
            android:title="@string/pref_category_common_language_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_visual" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="favouritesExpanded"
            android:summary="@string/pref_category_visual_fav_summary"
            android:title="@string/pref_category_visual_fav_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_stations" >
        <ListPreference
            android:defaultValue="timeRemaining"
            android:entries="@array/timeVehicles"
            android:entryValues="@array/timeVehiclesValues"
            android:key="timeVehicles"
            android:summary="@string/pref_category_stations_summary"
            android:title="@string/pref_category_stations_title" />
        <ListPreference 
            android:defaultValue="8"
            android:entries="@array/closestStations"
            android:entryValues="@array/closestStationsValues"
            android:key="closestStations"
            android:summary="@string/pref_category_stations_closest_summary"
            android:title="@string/pref_category_stations_closest_title" />
        <ListPreference
            android:defaultValue="time_skgt"
            android:entries="@array/timeInfoRetrieval"
            android:entryValues="@array/timeInfoRetrievalValues"
            android:key="timeInfoRetrieval"
            android:summary="@string/pref_category_stations_timeInfoRetrieval_summary"
            android:title="@string/pref_category_stations_timeInfoRetrieval_title" />
    </PreferenceCategory>

</PreferenceScreen>