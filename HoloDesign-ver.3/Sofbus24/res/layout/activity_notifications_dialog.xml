<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="12sp"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    android:paddingTop="12sp" >

    <LinearLayout
        android:id="@+id/notifications_dialog_image_station_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_dialog_station_caption"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="12sp"
        android:minHeight="@dimen/vb_time_image_vehicle_height"
        android:minWidth="@dimen/vb_time_image_vehicle_width" >

        <ImageView
            android:id="@+id/notifications_dialog_image_station"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_img_empty_content_description" />
    </LinearLayout>

    <TextView
        android:id="@+id/notifications_dialog_station_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notifications_dialog_station_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_dialog_vehicle_caption"
        android:layout_toRightOf="@+id/notifications_dialog_image_vehicle_layout"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/notifications_dialog_image_vehicle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_dialog_station_caption"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="12sp"
        android:minHeight="@dimen/vb_time_image_vehicle_height"
        android:minWidth="@dimen/vb_time_image_vehicle_width" >

        <ImageView
            android:id="@+id/notifications_dialog_image_vehicle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_img_empty_content_description" />
    </LinearLayout>

    <TextView
        android:id="@+id/notifications_dialog_vehicle_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_dialog_station_caption"
        android:layout_toRightOf="@+id/notifications_dialog_image_vehicle_layout"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notifications_dialog_vehicle_direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_dialog_vehicle_caption"
        android:layout_toRightOf="@+id/notifications_dialog_image_vehicle_layout"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/notifications_dialog_vehicle_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notifications_dialog_image_vehicle_layout"
        android:layout_below="@+id/notifications_dialog_image_vehicle_layout"
        android:layout_marginTop="12sp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF2727"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>