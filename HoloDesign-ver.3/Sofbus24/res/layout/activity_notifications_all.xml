<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/notifications_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1sp"
            android:fastScrollEnabled="true"
            android:focusable="true" >
        </ListView>

        <RelativeLayout
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="-25sp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/notifications_list_empty_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_img_empty_content_description"
                android:paddingBottom="20sp"
                android:src="@drawable/ic_empty_notifications_list" />

            <TextView
                android:id="@+id/notifications_list_empty_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifications_list_empty_image"
                android:gravity="center"
                android:text="@string/notifications_list_empty_text"
                android:textColor="#080808"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/notifications_loading"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

</RelativeLayout>