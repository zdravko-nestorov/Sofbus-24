<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8sp"
        android:paddingLeft="8sp"
        android:paddingRight="10sp"
        android:paddingTop="12sp" >

        <LinearLayout
            android:id="@+id/notifications_dialog_image_vehicle_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="12sp"
            android:minHeight="@dimen/vb_time_image_vehicle_height"
            android:minWidth="@dimen/vb_time_image_vehicle_width" >

            <ImageView
                android:id="@+id/notifications_dialog_image_vehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_img_empty_content_description" />
        </LinearLayout>

        <TextView
            android:id="@+id/notifications_dialog_vehicle_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notifications_dialog_image_vehicle_layout"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notifications_dialog_vehicle_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notifications_dialog_vehicle_caption"
            android:layout_toRightOf="@+id/notifications_dialog_image_vehicle_layout"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/notifications_dialog_image_station_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notifications_dialog_image_vehicle_layout"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="12sp"
            android:minHeight="@dimen/vb_time_image_vehicle_height"
            android:minWidth="@dimen/vb_time_image_vehicle_width" >

            <ImageView
                android:id="@+id/notifications_dialog_image_station"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_img_empty_content_description"
                android:src="@drawable/ic_pin" />
        </LinearLayout>

        <TextView
            android:id="@+id/notifications_dialog_station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notifications_dialog_image_vehicle_layout"
            android:layout_toRightOf="@+id/notifications_dialog_image_station_layout"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notifications_dialog_station_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notifications_dialog_station_name"
            android:layout_toRightOf="@+id/notifications_dialog_image_station_layout"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notifications_dialog_current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notifications_dialog_image_station_layout"
            android:layout_below="@+id/notifications_dialog_image_station_layout"
            android:layout_marginTop="5sp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@drawable/divider"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/notifications_dialog_vehicle_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF2727"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>